<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wkpescherine.celebpage.Latest"
    tools:showIn="@layout/app_bar_latest"
    android:orientation="vertical"
    android:background="#aaa">

    <RelativeLayout
        android:layout_height="166dp"
        android:layout_width="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:background="#fff"
            android:src="@drawable/cb_mini"
            android:onClick="onClickVideos"
            android:id="@+id/top_section1"
            />

        <TextView
            android:layout_marginTop="125dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textAllCaps="true"
            android:text="Little bit short line of text to show length"
            android:textColor="#fff"
            android:textSize="16dp"
            android:background="#965fa5cc"
            android:id="@+id/overlay_box1"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene1"
                android:layout_width="190dp"
                android:onClick="onClickVideos"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_row="0"/>
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene2"
                android:onClick="onClickVideos"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_row="0"/>
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene3"
                android:layout_width="190dp"
                android:onClick="onClickVideos"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_row="1"/>
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene4"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:onClick="onClickVideos"
                android:layout_row="1"/>
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene5"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:onClick="onClickVideos"
                android:layout_row="2"/>
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene6"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:onClick="onClickVideos"
                android:layout_row="2"/>
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene7"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:onClick="onClickVideos"
                android:layout_column="0"
                android:layout_row="3"/>
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene8"
                android:layout_width="190dp"
                android:onClick="onClickVideos"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_row="3"/>
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene9"
                android:layout_width="190dp"
                android:onClick="onClickVideos"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_row="4"/>
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene10"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:onClick="onClickVideos"
                android:layout_row="4"/>
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene11"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:onClick="onClickVideos"
                android:layout_row="5"/>
            <ImageButton
                android:src="@drawable/cb_mini"
                android:id="@+id/scene12"
                android:onClick="onClickVideos"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_row="5"/>

        </GridLayout>

    </ScrollView>


</LinearLayout>
