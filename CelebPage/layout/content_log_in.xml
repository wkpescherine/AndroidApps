<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wkpescherine.celebpage.LogIn"
    tools:showIn="@layout/activity_log_in"
    android:orientation="vertical"
    android:background="#5fa5cc">

    <ImageView
        android:layout_marginTop="40dp"
        android:background="@drawable/cb_mini"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        />

    <EditText
        android:layout_marginTop="25dp"
        android:hint="Enter email"
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:background="#fff"
        android:id="@+id/enter_email"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:hint="Enter password"
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:background="#fff"
        android:id="@+id/enter_password"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:text="Forgot/Reset Password"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickResetPassword"/>

    <ImageView
        android:layout_marginTop="25dp"
        android:background="@drawable/login_button"
        android:layout_height="40dp"
        android:layout_width="90dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickLogIn"
        />

    <ImageView
        android:layout_marginTop="25dp"
        android:background="@drawable/sign_up"
        android:layout_height="40dp"
        android:layout_width="90dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickCreateAccount"
        />

    <ImageView
        android:layout_marginTop="25dp"
        android:background="@drawable/login_fb"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:text="Continue without login"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickNonLogIn"/>

</LinearLayout>
