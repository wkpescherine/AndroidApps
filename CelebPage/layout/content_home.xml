<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wkpescherine.celebpage.Home"
    tools:showIn="@layout/app_bar_home"
    android:orientation="vertical"
    android:background="#aaa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@drawable/blank_header">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:background="#fff"
                android:src="@drawable/cb_mini"
                android:id="@+id/top_section1"
                />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="166dp"
                    android:background="#76000000"
                    android:id="@+id/overlay_1"
                    />
                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/top3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/overlay_top1"
                        />
                        <TextView
                            android:layout_marginTop="105dp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:textAllCaps="true"
                            android:text="Little bit short line of text to show length"
                            android:textColor="#fff"
                            android:textSize="16dp"
                            android:background="#965fa5cc"
                            android:id="@+id/overlay_box1"
                            />

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:background="#fff"
                android:layout_below="@id/top_section1"
                android:src="@drawable/cb_mini"
                android:id="@+id/top_section2"
                />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="166dp"
                    android:background="#76000000"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/overlay_1"
                    android:id="@+id/overlay_2"
                    />
                    <ImageView
                        android:layout_marginTop="147dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/latest"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/overlay_top2"
                        />
                        <TextView
                            android:layout_below="@id/overlay_box1"
                            android:layout_marginTop="115dp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:textAllCaps="true"
                            android:text="Short text sample."
                            android:textColor="#fff"
                            android:background="#965fa5cc"
                            android:id="@+id/overlay_box2"
                            android:textSize="16dp"
                            />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:background="#fff"
                android:layout_marginTop="8dp"
                android:layout_below="@id/top_section2"
                android:src="@drawable/cb_mini"
                android:id="@+id/top_section3"
                />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="166dp"
                    android:background="#76000000"
                    android:layout_below="@id/overlay_2"
                    android:layout_marginTop="8dp"
                    android:id="@+id/overlay_3"
                    />
                    <ImageView
                        android:layout_marginTop="321dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/dish"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/overlay_top3"
                        />
                        <TextView
                            android:layout_below="@id/overlay_box2"
                            android:layout_marginTop="115dp"
                            android:layout_width="wrap_content"
                            android:textAllCaps="true"
                            android:text="Text will go here. This is intended as a very long sample of writing. the reason for this is to test out the length of the box and how much text get in here"
                            android:textColor="#fff"
                            android:background="#965fa5cc"
                            android:id="@+id/overlay_box3"
                            android:textSize="16dp"
                            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>
