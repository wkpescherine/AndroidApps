<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_lesson_tut"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.moat279.ttp.LessonTut"
    tools:showIn="@layout/activity_lesson_tut"
    android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="This is the code to enter"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#f00"
        android:textAlignment="center"
        android:text="include iostream"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Then enter the following line of code"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#f00"
        android:textAlignment="center"
        android:text="using namespace std;"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="And finally enter the following code"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#f00"
        android:text="int main(){\n\cout HelloWorld endln:\n\nreturn 0;\n\n}\n"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Now click on the below button to validate the code"
        />

    <EditText
        android:layout_height="170dp"
        android:layout_width="match_parent"
        android:id="@+id/editInput"
        android:background="#888"
        />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Click to validate code"
        />

</LinearLayout>
